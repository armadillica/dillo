| {% load i18n %}

.pagination
	//- Only show stats if there is label and we are in list view.
	| {% if not is_detail %}
	.pagination-stat.
		{{ page_obj.paginator.count }} {% if label %}{{ label }}{{ page_obj.paginator.count | pluralize }}{% endif %}
	| {% endif %}

	//- In detail view, only show previous and next buttons, no page number.
	| {% if is_detail %}
	.btn-toolbar-row
		| {% if prev_obj_url %}
		a.btn.btn-prev(href="{{ prev_obj_url }}?{{ sort }}")
			span
				i.i-chevron-left
				span {% trans 'Previous' %}
		| {% else %}
		a.btn.disabled(href="#")
			span
				i.i-chevron-left
				span {% trans 'Previous' %}
		| {% endif %}
		| {% if next_obj_url %}
		a.btn.btn-next(href="{{ next_obj_url }}?{{ sort }}")
			span
				span {% trans 'Next' %}
				i.i-chevron-right
		| {% else %}
		a.btn.disabled(href="#")
			span
				span {% trans 'Next' %}
				i.i-chevron-right
		| {% endif %}

	| {% else %}
	.btn-toolbar-row
		//- Previous button.
		| {% if page_obj.has_previous %}
		a.btn.btn-prev(href="?{{ sort }}&page={{ page_obj.previous_page_number }}", tabindex='-1')
			span #[i.i-chevron-left]
		| {% else %}
		a.btn.disabled(href="#")
			span #[i.i-chevron-left]
		| {% endif %}

		//- Page number.
		| {% if page_obj.has_previous or page_obj.has_next %}
		.btn-group
			| {% for page_number in page_obj.paginator.page_range %}
			a.btn(
				href="?{{ sort }}&page={{ page_number }}",
				class="{% if page_number == page_obj.number %}active{% endif %}")
				span {{ page_number }}
			| {% endfor %}
		| {% endif %}

		//- Next button.
		| {% if page_obj.has_next %}
		a.btn.btn-next(href="?{{ sort }}&page={{ page_obj.next_page_number }}")
			span #[i.i-chevron-right]
		| {% else %}
		a.btn.disabled(href="#")
			span #[i.i-chevron-right]
		| {% endif %}
	| {% endif %}
